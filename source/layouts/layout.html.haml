!!!
%html
  %head
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no", :name => "viewport"}/

    %meta{:content => "../images/meta/reprograma-fb.png", :property => "og:image"}
    %meta{:content => "Queremos inspirar, empoderar e educar mulheres jovens, por meio de conhecimentos de computação e ferramentas de capacitação profissional.", :property => "og:description"}
    %meta{:content => "http://www.reprograma.com.br", :property => "og:url"}
    %meta{:content => "Reprograma - Aprenda a construir a web", :property => "og:title"}

    %script{src: "vendor/javascripts/jquery-1.12.3.js"}
    %script{src: "vendor/javascripts/bootstrap.js"}
    %script{src: "//cdn.jsdelivr.net/theaterjs/latest/theater.min.js"}

    %title= current_page.data.title || "Reprograma - Aprenda a construir a web"
    %link{:href => "//fonts.googleapis.com/css?family=Lato:300,400", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag :site
    = javascript_include_tag :all
  %body{:class => page_classes}
    = yield
